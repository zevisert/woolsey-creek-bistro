---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Woolsey Creek Bistro">
  <!-- Add your site or application content here -->

  <header class="relative flex h-screen w-full bg-transparent overflow-hidden">
    <!-- Navbar -->
    <nav
      class="relative z-20 top-12 sm:top-24 md:top-0 right-0 w-full inline-block px-10 pt-5 text-2xl text-white bg-transparent bg-opacity-50 rounded-xl"
    >
      <div class="flex justify-between items-center flex-col md:flex-row gap-8">
        <div>
          <img
            alt="Woolsey Creek Bistro Logo"
            class="h-20 lg:h-32 aspect-[4/5]"
            src="img/WoolseyLogo.svg"
          />
        </div>
        <a
          class="px-3 py-4 bg-black text-white font-sans uppercase tracking-widest border hover:text-black hover:bg-white hover:border-black transition duration-300"
          href="menu">Menu</a
        >
      </div>
    </nav>
    <!-- Mobile Links -->
    <!-- Video Background Element -->
    <div
      class="absolute w-screen h-screen border-b-8 border-lime-600 bg-[#859244]"
    >
      <div class="absolute w-full h-full flex items-center justify-center">
        <img
          alt="Woolsey Creek Bistro Logo"
          class="w-full max-w-4xl relative z-10 mix-blend-overlay aspect-[50/23]"
          src="img/WoolseyLogoFull.svg"
        />
      </div>
      <video
        id="hero-video"
        class="absolute z-0 top-0 w-full h-full object-cover"
        playsinline
        loop
        muted
        poster="img/on-the-vine.jpg"
      >
        <source src="video/on-the-vine-boomerang.webm" type="video/webm" />
      </video>
      <script>
        const motion = matchMedia("(prefers-reduced-motion)");
        function autoplay(e: MediaQueryListEvent | MediaQueryList) {
          const video = document.querySelector<HTMLVideoElement>("#hero-video");
          if (!e.matches) {
            video?.play();
          } else {
            video?.pause();
          }
        }
        motion.addEventListener("change", autoplay);
        autoplay(motion);
        setTimeout(() => {}, 1000);
      </script>
      <div
        class="absolute bottom-10 flex justify-center w-full mix-blend-overlay"
      >
        <svg
          class="w-20 motion-safe:animate-bounce"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 7"
        >
          <path
            d="M 0 0 L 10 5 L 20 0"
            stroke="#000000"
            stroke-width="2"
            fill="none"></path>
        </svg>
      </div>
    </div>
  </header>

  <!-- End of header -->

  <!-- Main content -->

  <main class="container print:max-w-none mx-auto">
    <section
      class="my-20 bg-fixed bg-center object-contain overflow-x-visible w-full"
      style="background-image: url('/img/building-front.jpg')"
    >
      <div
        class="container px-4 mx-auto backdrop-blur-sm backdrop-brightness-50"
      >
        <div class="pt-20 pb-24 px-8 md:px-16 rounded">
          <div class="flex flex-wrap -mx-8">
            <div class="w-full lg:w-1/2 px-8 flex">
              <div class="my-auto text-white">
                <h2 class="text-3xl lg:text-4xl font-semibold uppercase">
                  Visit us:
                </h2>
                <p
                  class="mt-2 leading-loose font-sans uppercase tracking-wide font-bold"
                >
                  Woolsey Creek Bistro
                </p>
                <p class="mt-2 mb-6 leading-loose">
                  <a
                    href="https://www.google.com/maps/place/?q=place_id:ChIJfUrLawU3eVMRuolxKzFH3xw"
                    >604 2<sup>nd</sup> Street West, Revelstoke, BC V0E 2S0</a
                  >
                </p>
                <h2 class="text-3xl lg:text-4xl font-semibold uppercase">
                  Call us:
                </h2>
                <p class="mt-2 mb-6 leading-loose">
                  <a href="tel:12508375500">250-837-5500</a>
                </p>
                <div
                  class="inline-block p-8 border bg-black text-white uppercase tracking-widest font-semibold leading-relaxed rounded-none"
                >
                  <p
                    class="font-sans uppercase tracking-wide font-bold text-white"
                  >
                    Hours of Operation
                  </p>
                  <ul>
                    <li>Tuesday to Sunday 5PM to 9PM.</li>
                  </ul>
                </div>

                <p class="bg-white"></p>
              </div>
            </div>
            <div class="w-full print:hidden lg:w-1/2 px-8 mt-12 lg:mt-0">
              <div class="embed-responsive border-x-4 border-t-4 border-black">
                <iframe
                  width="450"
                  height="250"
                  class="aspect-[4/3] w-full h-full bg-black border-b-8 border-lime-600"
                  loading="lazy"
                  title="Woolsey Creek Bistro on Google Maps"
                  referrerpolicy="no-referrer-when-downgrade"
                  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCLDETUETGMeUERokdxX_J5HbVtrEH8dy8&q=place_id:ChIJfUrLawU3eVMRuolxKzFH3xw&zoom=14"
                  allowfullscreen
                >
                </iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
